<div class="product-card">
  <a href="{{ product.url }}">
    <div class="product-image">
      <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
    </div>

    <div class="product-info">
      <h3>{{ product.title }}</h3>
      <p class="price">{{ product.price | money }}</p>
    </div>
  </a>
</div>
